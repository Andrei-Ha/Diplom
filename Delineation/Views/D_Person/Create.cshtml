@model Delineation.Models.D_Person
@{
    ViewData["Title"] = "Добавление";
}
<link rel="stylesheet" href="~/lib/bootstrap-select-1.13.9/css/bootstrap-select.min.css" />
<script src="~/lib/bootstrap-select-1.13.9/js/bootstrap-select.min.js"></script>
<h1>Добавление</h1>

<h4>Работник</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="form-group">
                @*<label asp-for="TcId" class="control-label"></label>*@
                <select name="strFIO" asp-items="ViewBag.FIO" class="selectpicker show-tick form-control" title="выберите из списка..." data-live-search="true"></select>
            </div>
            <div class="form-group">
                <label asp-for="PositionId" class="control-label"></label>
                <select Name ="PositionId" class="form-control" asp-items="ViewBag.Positions"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>
<script type="text/javascript">
    $(function () {
        $('.selectpicker').selectpicker();
    });
</script>

